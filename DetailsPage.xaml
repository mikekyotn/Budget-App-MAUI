<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Budget_App_MAUI.DetailsPage"
             xmlns:viewmodel="clr-namespace:Budget_App_MAUI.ViewModel"
             x:DataType="viewmodel:DetailsViewModel"
             Title="{Binding Transaction.Description}">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="{Binding Transaction.DayOfMonthDue}"/>
            <Label Text="{Binding Transaction.PaymentEstimated}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>